
.banner-container {
	display: flex;
	justify-content: center;
	align-items: flex-start;
	width: 100%;
	height: 400rpx;
	background: linear-gradient(180deg, #0d90fe, #2b4dff 35%, #2b4dff);
	-webkit-transform: translateY(-100rpx);
	        transform: translateY(-100rpx);
}
.content-container {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	width: 100%;
	height: calc(100vh - 300rpx);
	-webkit-transform: translateY(-200rpx);
	        transform: translateY(-200rpx);
	background-color: white;
	border-radius: 30rpx;
}
.content-user-login {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	/* 间隔: 20rpx; */
	align-items: center;
	width: 100%;
	height: 100rpx;
	padding: 30rpx;
	box-sizing: border-box;
}
.content-user-control {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	height: 100rpx;
	padding: 30rpx;
	box-sizing: border-box;
}

